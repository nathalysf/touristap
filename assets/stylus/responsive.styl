.overlay-form-xs
	padding 12% 20% 0% 20%
	width 100%
	height 850px
	background-color rgba(0,0,0,0.5)
	form 
		input
			width 100%
			border-radius 6px
			border 0px
			height 65px
			margin 10px 0px 10px 0px
			font-size 18px
			padding 0px 0px 0px 12px
		
		button
			width 100%
			background-color #02bbcf
			border 1px solid #02bbcf
			height 65px
			border-radius 6px
			margin-top 10px
			font-size 30px
			color white
			&:hover
				background-color #158591
				border 1px solid #158591
				
			&:focus
				background-color #02bbcf
				border 1px solid #02bbcf	
			
		p 
			color white
			text-align justify
			font-weight 100	
			padding-top 5%
			line-height 1.2
			font-size 15px	
			
		.submit
			padding-left 0px!important
			background-color #8db12f 	
			color white
			margin-top 8%
			height 65px
			font-size 30px
			&:hover 
				background-color #738837
				
			&:focus
				background-color #8db12f
	

