.overlay-form-xs
	padding 12% 20% 12% 20%
	width 100%
	background-color rgba(0,0,0,0.5)
	form 
		input
			width 100%
			border-radius 6px
			border 0px
			height 65px
			margin 10px 0px 10px 0px
			font-size 25px
			padding 0px 0px 0px 12px
		
		.selfie 
			clear: both;
			
		.input-hidden 
			opacity 0
			position absolute
			margin 0
			padding 0
			height 65px
			width 92%
			left 4%
			top 9%
			
		.input-imagen
			display none
		
		.button
			padding 3% 0% 3% 0%
			width 100%
			background-color #02bbcf
			border 1px solid #02bbcf
			border-radius 6px
			margin-top 10px
			font-size 25px
			color white
			&:hover
				background-color #158591
				border 1px solid #158591
				
			&:focus
				background-color #02bbcf
				border 1px solid #02bbcf
			
		p 
			color white
			text-align justify
			font-weight 100	
			padding-top 5%
			line-height 1.2
			font-size 20px	
			
		.submit
			padding-left 0px!important
			background-color #8db12f 	
			color white
			margin-top 8%
			height 65px
			font-size 30px
			&:hover 
				background-color #738837
				
			&:focus
				background-color #8db12f
	

