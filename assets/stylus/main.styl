

body 
	font-family "san francisco"!important
	font-weight 400!important 
	p 
		font-size 14px
.intro
	background-image url("../img/bg-hero.png")
	height 965px
	width 100%
	background-repeat no-repeat
	background-size cover
	
	.text-white 
		color white
		padding-right 7%
		.title-lg
			font-size 36px
			font-weight 400	
		.title-md
			font-size 30px
		.text-md 
			font-size 23px	
			font-weight 400
		
		ol
			padding-bottom 4%
			padding-top 4%
			padding-left: 3%;
			li 
				line-height 1.8	
		.text-sm
			font-size 18px
		p.text-sm 
			margin-bottom 4%
			
.fw-800 
	font-weight 800!important
	
.lh-1 
	line-height 1
.text-shadow 
	text-shadow 5px 5px 10px black	
.logo 
	margin 4% 0% 2% 0%
	width 11%	
	
.overlay-form
	padding 23% 17% 0% 17%
	width 115%
	height 600px
	background-color rgba(0,0,0,0.5)
	float right
	border-radius 10px
	
	
	

	form 
		input
			width 100%
			border-radius 6px
			border 0px
			height 35px
			margin 10px 0px 10px 0px
			font-size 18px
			padding 0px 0px 0px 12px
		
		button
			width 100%
			background-color #02bbcf
			border 1px solid #02bbcf
			border-radius 6px
			margin-top 10px
			font-size 18px
			color white
			&:hover
				background-color #158591
				border 1px solid #158591
				
			&:focus
				background-color #02bbcf
				border 1px solid #02bbcf	
			
		p 
			color white
			text-align justify
			font-weight 100	
			padding-top 5%
			line-height 1.2
			font-size 15px	
			
		.submit
			padding-left 0px!important
			background-color #8db12f 	
			color white
			margin-top 20%
			&:hover 
				background-color #738837
				
			&:focus
				background-color #8db12f

.descuentos
	.row
		padding 3% 0% 5% 0%
	h1.title
		text-align center
		font-size 48px
		font-weight 800
		

	.col-xs-12.col-md-3
		padding-top 3%
		text-align center
		
		div
			color white
			font-size 1.8em
			font-weight 800
			width 100%
			height 250px
			background-repeat no-repeat
			background-size contain
			
			.text-dsct
				position absolute
				top 7%
				left 10%
				
			.text-pts
				position absolute
				right 15%
				bottom 55%
				
		div.dsct
			.text-dsct
				position absolute
				top 10%
				left 10%
				
			.text-pts
				position absolute
				right 15%
				bottom 33%
				
		h4 
			font-size 18px
			font-weight 800
			margin-bottom 0px
			margin-top 8%
			
		.sub-title
			font-weight 400
			line-height 1
			font-size 18px
			
		.text-strike
			text-decoration line-through
		
		.limit-time
			color red
			font-weight 600
			line-height 1
			margin-bottom 4px
			
			
